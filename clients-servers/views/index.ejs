<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs')%>
<body>
 <%- include('./partials/nav.ejs') %>
  <div class="blogs content">
    <h2>All Blogs</h2>
    <% if (Blog.length > 0) { %>
      <% Blog.forEach(blog => { %>
        <a class='a' href="/blogs/<%= blog._id %>">
        <h2 class="title"> <%= blog.title %> </h2>
        <p class="name"> <%= blog.body %> </p>
        </a>
      <% }) %>
    <% } else {%>
      <p>there is no Blogs to display </p>
      <% } %>
  </div>
  <%- include('./partials/footer.ejs') %>
</body>
</html>